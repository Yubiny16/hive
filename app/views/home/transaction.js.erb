var tt = '<%= @transaction_type %>';
var money = $('#money').val();
var description = $('#description').val();
var old_budget = document.getElementById("total_budget").innerHTML;
var today = new Date();
var dd = today.getDate();
var mm = today.getMonth()+1; //January is 0!
var yyyy = today.getFullYear();
if(dd<10) {
    dd = '0'+dd
}
if(mm<10) {
    mm = '0'+mm
}
today = mm + '-' + dd + '-' + yyyy;

if (tt == "plus") {
  var new_budget = parseInt(old_budget) + parseInt(money);
  $(".each_transaction").append("<tr class= 'revenue'> <td>" + today + "</td> <td>" + description + "</td> <td><span>" + money + "</span>" + "<%= j render('del_transaction') %>" + "</td><tr>");
  $("#description").val("");
  $("#money").val("");
  $('#total_budget').text(new_budget);
}
else if (tt == "minus") {
  var new_budget = parseInt(old_budget) - parseInt(money);
  $(".each_transaction").append("<tr class= 'expense'> <td>" + today + "</td> <td>" + description + "</td> <td><span>" + money + "</span>" + "<%= j render('del_transaction') %>" + "</td> <tr>");
  $("#description").val("");
  $("#money").val("");
  $('#total_budget').text(new_budget);
}
