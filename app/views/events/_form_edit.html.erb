<%= simple_form_for @event, remote: true do |f| %>
  <div id="calendar-group-member-popup">
    <p class="calendar-member-popup-content">
      <%= @event.description %>
    </p>
    <p class="calendar-member-popup-start">
      <span style="color: #d4624c">Start:</span> <%= @event.start.strftime("%B %e at %l:%M %p") %>
    </p>
    <p class="calenar-member-popup-end">
      <span style="color: #d4624c">End:</span> <%= @event.end.strftime("%B %e at %l:%M %p") %>
    </p>
    <% if @event.calendar_type == 1 %>
      <ol>
        <% Eventuser.where(event_id: @event.id).each do |attending_members| %>
          <li>
            <%= User.find(attending_members.user_id).first_name %> <%= User.find(attending_members.user_id).last_name %>
          </li>
        <% end %>
      </ol>
    <% end %>
    <hr />
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Delete',
                event,
                method: :delete,
                class: 'btn',
                data: { confirm: 'Are you sure?' },
                remote: true unless @event.new_record? %>
  </div>
<% end %>
