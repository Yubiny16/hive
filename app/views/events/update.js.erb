if (<%= @event.calendar_type %> == 1){
  $('.calendar').fullCalendar('removeEvents', [<%= @event.id %>]);
  $('.calendar').fullCalendar(
    'renderEvent',
    $.parseJSON("<%=j render(@event, format: :json).html_safe %>"),
    true
  );
  $('.modal').modal('hide');
}
else {
  $('.my_calendar').fullCalendar('removeEvents', [<%= @event.id %>]);
  $('.my_calendar').fullCalendar(
    'renderEvent',
    $.parseJSON("<%=j render(@event, format: :json).html_safe %>"),
    true
  );
  $('.modal').modal('hide');
}
