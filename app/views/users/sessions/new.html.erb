<head>
  <style>
    .field, .actions, .links {
      width: 300px;
      margin: auto;
    }
    #user_email, #user_password {
      border-radius: 20px;
      width: 300px;
      height: 40px;
      margin-bottom: 15px;
    }
    input[type="submit"] {
      border-radius: 20px;
      border: 1.5px solid #543B19;
      width: 300px;
      height: 40px;
      margin-bottom: 15px;
      color: #543B19;
      font-weight: bold;
      background: linear-gradient(to left, white 50%, #543B19 50%);
      background-size: 200% 100%;
      background-position: right bottom;
      -webkit-transition: all 0.8s ease;
      -ms-transition: all 0.8s ease;
      transition:all 0.8s ease;
    }
    input[type="submit"]:hover {
      background-position:left bottom;
      color: #FBF764;
    }
    .links a {
      color: #543B19;
      font-weight: bold;
      padding: 5px 8px;
      display: inline-block;
      margin-bottom: 2px;
      border-radius: 16px;
      text-decoration: none;
      -webkit-transition: background-color 0.5s ease;
      -ms-transition: background-color 0.5s ease;
      transition: background-color 0.5s ease;
    }
    .links a:hover {
      background-color: #FBF764;
    }
    .checkbox1 {
      padding-left: 20px;
      margin-top: -5px;
      margin-bottom: 5px;
      color: black;
    }
    .container {
      padding-top: 10%;
    }
    .logo-size {
      display: block;
      width: 100px;
      margin: auto;
      margin-bottom: 3em;
    }
  </style>
</head>
<body>
  <div class="container">

    <!--logo-->
    <%= image_tag "hexagon.svg.png", class: "logo-size" %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field checkbox1">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "btn" %>
      </div>
    <% end %>

    <div class="links">
      <%= render "users/shared/links" %>
    </div>
  </div>
</body>
