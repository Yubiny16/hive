<head>
  <style>
    .container {
      padding-top: 5%;
      padding-bottom: 5%;
    }
    .body-container {
      z-index: 1;
      position: fixed;
      top: 65%;
      left: 47%;
      margin-top: -400px;
      margin-left: -150px;
      background-color: white;
      padding: 30px;
    }
    .field, .actions, .links {
      width: 300px;
      margin: auto;
    }
    .field em {
      padding-left: 10px;
    }
    input.input-field {
      border-radius: 20px;
      width: 300px;
      height: 40px;
      margin-bottom: 15px;
    }
    input[type="submit"] {
      border-radius: 20px;
      border: 1.5px solid #DA413D;
      width: 300px;
      height: 40px;
      margin-bottom: 15px;
      color: #DA413D;
      font-weight: bold;
      background: linear-gradient(to left, white 50%, #DA413D 50%);
      background-size: 200% 100%;
      background-position: right bottom;
      -webkit-transition: all 0.8s ease;
      -ms-transition: all 0.8s ease;
      transition:all 0.8s ease;
    }
    input[type="submit"]:hover {
      background-position: left bottom;
      color: white;
    }
    .links a {
      color: grey;
      font-weight: bold;
      padding: 5px 8px;
      display: inline-block;
      margin-bottom: 2px;
      border-radius: 16px;
      text-decoration: none;
      -webkit-transition: all 0.5s ease;
      -ms-transition: all 0.5s ease;
      transition: all 0.5s ease;
    }
    .links a:hover {
      background-color: #DA413D;
      color: white;
    }
    .logo-size {
      display: block;
      width: 100px;
      margin: auto;
      margin-bottom: 3em;
    }
    body {
      background-color: #DA413D;
    }
  </style>
</head>
<body>
  <div class="container">

    <!--logo-->
    <div class="logo">
      <a href="/landing/index">LOGO</a>
    </div>
    <div class="body-container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control input-field" %>
        </div>
        <div class="field">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control input-field" %>
        </div>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "form-control input-field" %>
        </div>
        <div class="field">
          <%= f.text_field :first_name, autofocus: true, placeholder: "First Name", class: "form-control input-field" %>
        </div>
        <div class="field">
          <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name", class: "form-control input-field" %>
        </div>
        <div class="field">
          <%= f.text_field :school, autocomplete: "off", placeholder: "School", class: "form-control input-field" %>
        </div>
        <div class="field">
          <%= f.text_field :major, autocomplete: "off", placeholder: "Major", class: "form-control input-field" %>
        </div>
        <!-- removed for now. will add back in the future
        <div class="field">
          <%= f.text_field :company, autocomplete: "off", placeholder: "Company", class: "form-control input-field" %>
        </div> -->
        <div class="field">
          <%= f.number_field :class_year, autocomplete: "off", placeholder: "Class Year (e.g., 2018)", class: "form-control input-field" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn" %>
        </div>
      <% end %>

      <div class="links">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
  <script>

  jQuery(function() {
    var tz = jstz.determine();
    var tz_name = tz.name();
    $.ajax({
      method: "GET",
      url: '/home/index',
      data: { timezone: tz_name }
    }).done(function() {
      alert("done");
    });
  });
  </script>
</body>
