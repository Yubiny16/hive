<div class="login-page">
  <div class="form">
    <form class="register-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div>
          <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
        </div>
        <div>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
        </div>
        <div>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
        </div>
        <div>
          <%= f.text_field :first_name, autofocus: true, placeholder: "First Name" %>
        </div>
        <div>
          <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name" %>
        </div>
        <div>
          <%= f.text_field :school, autocomplete: "off", placeholder: "School" %>
        </div>
        <div>
          <%= f.text_field :major, autocomplete: "off", placeholder: "Major" %>
        </div>
        <div>
          <%= f.text_field :company, autocomplete: "off", placeholder: "Company" %>
        </div>
        <div>
          <%= f.number_field :class_year, autocomplete: "off", placeholder: "Class of Year" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </form>
  </div>
</div>
