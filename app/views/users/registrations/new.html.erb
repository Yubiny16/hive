<head>
  <style>
    .container {
      padding-top: 5%;
      padding-bottom: 5%;
    }
    .field, .actions, .links {
      width: 300px;
      margin: auto;
    }
    .field em {
      padding-left: 10px;
    }
    input.input-field {
      border-radius: 20px;
      width: 300px;
      height: 40px;
      margin-bottom: 15px;
    }
    input[type="submit"] {
      border-radius: 20px;
      width: 300px;
      height: 40px;
      margin-bottom: 15px;
      background-color: #543B19;
      color: white;
      font-weight: bold;
    }
    input[type="submit"]:hover {
      color: black;
    }
    .links a {
      color: black;
      font-weight: bold;
    }
    .links a:hover {
      color: white;
      text-decoration: none;
    }
    .logo-size {
      display: block;
      width: 100px;
      margin: auto;
      margin-bottom: 3em;
    }
  </style>
</head>
<body>
  <div class="container">

    <!--logo-->
    <%= image_tag "hexagon.svg.png", class: "logo-size" %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control input-field" %>
      </div>
      <div class="field">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control input-field" %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "form-control input-field" %>
      </div>
      <div class="field">
        <%= f.text_field :first_name, autofocus: true, placeholder: "First Name", class: "form-control input-field" %>
      </div>
      <div class="field">
        <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name", class: "form-control input-field" %>
      </div>
      <div class="field">
        <%= f.text_field :school, autocomplete: "off", placeholder: "School", class: "form-control input-field" %>
      </div>
      <div class="field">
        <%= f.text_field :major, autocomplete: "off", placeholder: "Major", class: "form-control input-field" %>
      </div>
      <!-- removed for now. will add back in the future
      <div class="field">
        <%= f.text_field :company, autocomplete: "off", placeholder: "Company", class: "form-control input-field" %>
      </div> -->
      <div class="field">
        <%= f.number_field :class_year, autocomplete: "off", placeholder: "Class Year (e.g., 2018)", class: "form-control input-field" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn" %>
      </div>
    <% end %>

    <div class="links">
      <%= render "users/shared/links" %>
    </div>
  </div>
</body>
